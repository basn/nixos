    {
      device = "data/files";
      fsType = "zfs";
      encrypted.keyFile = "/root/zfs-data.key";
    };
  fileSystems."/data2/files" =
    {
      device = "data2/files";
      fsType = "zfs";
      encrypted.keyFile = "/root/zfs-data2.key";
    };


