    [ (modulesPath + "/installer/scan/not-detected.nix")
    ];

  boot.initrd.availableKernelModules = [ "vmd" "xhci_pci" "mpt3sas" "ahci" "usb_storage" "sd_mod" ];
  boot.initrd.kernelModules = [ ];
